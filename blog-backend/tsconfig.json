  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build",
    "allowJs": true,
    "baseUrl": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
